{
    "name": "agent-control-plane",
    "displayName": "Agent Control Plane",
    "description": "A time-travel debugger for AI agents that reconstructs cognition from deterministic execution traces.",
    "version": "1.0.0",
    "publisher": "acp",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Debuggers",
        "Visualization"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "acp.openRun",
                "title": "ACP: Open Agent Run",
                "category": "Agent Control Plane"
            },
            {
                "command": "acp.openFailure",
                "title": "ACP: Open at First Failure",
                "category": "Agent Control Plane"
            },
            {
                "command": "acp.compareRun",
                "title": "ACP: Compare With Another Run",
                "category": "Agent Control Plane"
            },
            {
                "command": "acp.counterfactual",
                "title": "ACP: Run Counterfactual Simulation",
                "category": "Agent Control Plane"
            },
            {
                "command": "acp.generateReport",
                "title": "ACP: Generate Diagnosis Report",
                "category": "Agent Control Plane"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "acp-replay",
                    "title": "Agent Control Plane",
                    "icon": "resources/icon.svg"
                }
            ]
        },
        "views": {
            "acp-replay": [
                {
                    "id": "acp.timelinePanel",
                    "name": "Timeline",
                    "type": "webview"
                },
                {
                    "id": "acp.stateInspector",
                    "name": "State Inspector",
                    "type": "webview"
                },
                {
                    "id": "acp.diffViewer",
                    "name": "Diff Viewer",
                    "type": "webview"
                },
                {
                    "id": "acp.hierarchyView",
                    "name": "Hierarchy"
                }
            ]
        },
        "menus": {
            "commandPalette": [
                {
                    "command": "acp.openRun",
                    "when": "true"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/vscode": "^1.85.0",
        "typescript": "^5.3.2"
    }
}
